@model List<UploadPhoto.ImageGalary>

@{
    ViewBag.Title = "Gallery";
}

<h2>Gallery</h2>

<p>
    @Html.ActionLink("Create New", "Upload")
</p>
<table class="table">
    @{

        int j = 0;
        for (int i = 0; i < Model.Count(); i += 4)
        {
            j = i;
            <tr>
                @while (j < i + 4 && j < Model.Count())
                {
                    <td>
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model[j].ImageDate,0,Model[j].ImageDate.Length)" width="100"/>

                    </td>
                    j++;
                }
            </tr>
        }
    }

</table>
